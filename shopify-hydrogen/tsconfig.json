{
  "compilerOptions": {
    "target": "ES2020",                          
    "lib": ["dom", "dom.iterable", "esnext"],    
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",                         
    "moduleResolution": "node",                  
    "esModuleInterop": true,                     
    "resolveJsonModule": true,                   
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "./dist"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
